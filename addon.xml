<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.skipintro" name="Skip Intro" version="1.0.0" provider-name="norix92">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <!-- This is needed to get an addon icon -->
    <extension point="xbmc.python.script" library="resources/lib/script_entry.py">
      <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="resources/lib/service_entry.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Propose to skip the intro of an episode automatically</summary>
        <description lang="en_GB">A service add-on that shows a Netflix-style notification for skipping the intro in an episode. Based on im85288's UpNext-addon.</description>
        <platform>all</platform>
        <license>GPL-2.0-only</license>
        <news>
v1.0.0 (2026-01-08)
- Initial Version
        </news>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
            <screenshot>resources/media/screenshot01.jpg</screenshot>
            <screenshot>resources/media/skipintro-settings.jpg</screenshot>
        </assets>
    </extension>
</addon>
